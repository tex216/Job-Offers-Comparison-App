<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.AdjustComparisonSettingsActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/label_adjust_comp_settings_header"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="#FFFFFF"
            android:backgroundTint="#6e1005"
            android:ems="10"
            android:inputType="textPersonName"
            android:paddingStart="5dp"
            android:text="Adjust comparison settings"
            android:textColor="#FFFFFFFF"
            android:textSize="30sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/label_retirement_benefits_weight"
                    android:layout_width="250dp"
                    android:layout_height="wrap_content"
                    android:paddingStart="5dp"
                    android:text="Retirement benefits"
                    android:textSize="18sp" />

                <EditText
                    android:id="@+id/text_retirement_benefits_weight"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:inputType="number" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/label_leave_time_weight"
                    android:layout_width="250dp"
                    android:layout_height="wrap_content"
                    android:paddingStart="5dp"
                    android:text="Leave time"
                    android:textSize="18sp" />

                <EditText
                    android:id="@+id/text_leave_time_weight"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:inputType="number" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/label_salary_weight"
                    android:layout_width="250dp"
                    android:layout_height="wrap_content"
                    android:paddingStart="5dp"
                    android:text="Yearly salary"
                    android:textSize="18sp" />

                <EditText
                    android:id="@+id/text_salary_weight"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:inputType="number" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/label_remote_work_weight"
                    android:layout_width="250dp"
                    android:layout_height="wrap_content"
                    android:paddingStart="5dp"
                    android:text="Possibility to work remotely"
                    android:textSize="18sp" />

                <EditText
                    android:id="@+id/text_remote_work_weight"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:inputType="number" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/label_bonus_weight"
                    android:layout_width="250dp"
                    android:layout_height="wrap_content"
                    android:paddingStart="5dp"
                    android:text="Yearly bonus"
                    android:textSize="18sp" />

                <EditText
                    android:id="@+id/text_bonus_weight"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:inputType="number" />

            </LinearLayout>

            <Space
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btn_cancel_weight"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="1"
                    android:backgroundTint="#FFFFFF"
                    android:gravity="center"
                    android:text="Cancel"
                    android:textAlignment="center"
                    android:textColor="#3C3F41"
                    android:theme="@style/Widget.MaterialComponents.Button.OutlinedButton"
                    app:cornerRadius="50dp"
                    app:iconSize="50dp"
                    app:strokeColor="#808080" />

                <Space
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />

                <Button
                    android:id="@+id/btn_save_weight"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:layout_weight="1"
                    android:backgroundTint="#6e1005"
                    android:gravity="center"
                    android:text="Save"
                    android:textAlignment="center"
                    android:textColor="#FFFFFFFF"
                    android:theme="@style/Widget.MaterialComponents.Button.OutlinedButton"
                    app:cornerRadius="50dp"
                    app:iconSize="50dp" />
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>